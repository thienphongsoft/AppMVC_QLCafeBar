<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Quản lý đơn vị tính</h3>
                    <div class="card-tools">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
            </div>
            <form id="AddFormUnit" name="AddFormUnit" class="form-horizontal">
                <div class="modal-body">
                    <div class="card card-primary card-tabs">
                        <div class="card-header p-0 pt-1">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item" id="link_unitTab">
                                    <a class="nav-link active" data-toggle="pill" href="#CreateUnit" role="tab" aria-controls="CreateUnit" aria-selected="true"><i class="fas fa-plus"></i> Tạo đơn vị tính</a>
                                </li>
                                <li class="nav-item" id="link_list_unitTab">
                                    <a class="nav-link" data-toggle="pill" href="#UnitList" role="tab" aria-controls="UnitList" aria-selected="false"><i class="fas fa-list"></i> Danh sách đơn vị tính</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="unit-tabs-one-tabContent">
                                <!-- Create Unit -->
                                <div class="tab-pane fade show active" id="CreateUnit" role="tabpanel" aria-labelledby="custom-tabs-one-home-tab">
                                    <div class="row">
                                        <input type="hidden" name="unit_id_add" id="unit_id_add">
                                        <label>Tên đơn vị tính</label>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <input type="text" id="unitName_add" name="unitName_add" class="form-control" placeholder="Nhập tên đơn vị tính" value="">
                                            <br />
                                            <div id="divStatus"></div>
                                        </div>
                                        <div class="form-group">
                                            <button type="button" id="btn_unit_save" name="btn_unit_save" class="btn btn-info btn-flat"><i class="fas fa-plus"></i> Lưu</button>
                                            <button type="button" id="btn_unit_continue" name="btn_unit_continue" class="btn btn-info btn-flat"><i class="fas fa-save"></i> Lưu và tiếp tục</button>
                                            <button type="button" style="display:none;" id="btn_unit_edit_save" name="btn_unit_edit_save" class="btn btn-info btn-flat"><i class="fas fa-check"></i> Lưu sửa</button>
                                            <button type="button" style="display:none;" id="btn_unit_cancel" name="btn_unit_cancel" class="btn btn-info btn-flat"><i class="fas fa-undo-alt"></i> Hủy</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="UnitList" role="tabpanel" aria-labelledby="custom-tabs-one-profile-tab">
                                    <label>Danh sách đơn vị tính</label>
                                    <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="TableUnit">
                                        <thead>
                                            <tr>
                                                <th style="text-align: center">
                                                    ID
                                                </th>
                                                <th style="text-align: center">
                                                    Tên đơn vị tính
                                                </th>
                                                <th style="text-align: center">
                                                    Chức năng
                                                </th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th style="text-align: center">
                                                    ID
                                                </th>
                                                <th style="text-align: center">
                                                    Tên đơn vị tính
                                                </th>
                                                <th style="text-align: center">
                                                    Chức năng
                                                </th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" data-dismiss="modal" class="btn btn-default float-right">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>
