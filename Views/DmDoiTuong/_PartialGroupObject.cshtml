<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Quản lý nhóm đối tượng</h3>
                    <div class="card-tools">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
            </div>
            <form id="AddFormNhom" name="AddFormNhom" class="form-horizontal">
                <div class="modal-body">
                    <div class="card card-primary card-tabs">
                        <div class="card-header p-0 pt-1">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item" id="linkGroupTab">
                                    <a class="nav-link active" data-toggle="pill" href="#CreateGroupProduct"><i class="fas fa-plus"></i> Tạo nhóm đối tượng</a>
                                </li>
                                <li class="nav-item" id="linkListGroupTab">
                                    <a class="nav-link" data-toggle="pill" href="#GroupProductList"><i class="fas fa-list"></i> Danh sách nhóm đối tượng</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <!-- Create Group Product -->
                                <div class="tab-pane container active p-0" id="CreateGroupProduct">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group row">
                                                <input type="hidden" name="Loaidt_id_add" id="Loaidt_id_add" />
                                                <label for="inputName" class="col-sm-5 col-form-label">Tên nhóm đối tượng</label>
                                                <div class="col-sm-7">
                                                    <input type="text" id="GroupObjectName_add" name="GroupObjectName_add" class="form-control" placeholder="Nhập tên nhóm đối tượng" value="" />
                                                    <div id="divStatus"></div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">

                                        </div>
                                        <div class="col-sm-8">
                                            <div class="form-group">
                                                <button type="button" id="btn_groupobject_save" name="btn_groupobject_save" class="btn btn-info btn-flat"><i class="fas fa-plus"></i> Lưu</button>
                                                <button type="button" id="btn_groupobject_continue" name="btn_groupobject_continue" class="btn btn-info btn-flat"><i class="fas fa-save"></i> Lưu và tiếp tục</button>
                                                <button type="button" style="display:none;" id="btn_groupobject_edit_save" name="btn_groupobject_edit_save" class="btn btn-info btn-flat"><i class="fas fa-check"></i> Lưu sửa</button>
                                                <button type="button" style="display:none;" id="btn_groupobject_cancel" name="btn_groupobject_cancel" class="btn btn-info btn-flat"><i class="fas fa-undo-alt"></i> Hủy</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="tab-pane container p-0" id="GroupProductList">
                                    <label>Danh sách nhóm đối tượng</label>
                                    <table class="table table-head-fixed table-bordered nowrap" style="width:100%;" id="TableGroupObject">
                                        <thead>
                                            <tr>
                                                <th style="text-align: center">
                                                    ID
                                                </th>
                                                <th style="text-align: center">
                                                    Tên nhóm đối tượng
                                                </th>
                                                <th style="text-align: center">
                                                    Chức năng
                                                </th>
                                            </tr>
                                        </thead>

                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" data-dismiss="modal" class="btn btn-default float-right">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>





