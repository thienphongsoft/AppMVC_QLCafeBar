<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Tạo đối tượng</h3>
                    <div class="card-tools">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true)
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Chọn nhóm đối tượng</label>
                                        <div class="input-group">
                                            <select id="CategoryObject_ID" name="CategoryObject_ID" class="form-control selectdvt">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Mã đối tượng<span style="color:red;">(*)</span>:</label>
                                        <input type="text" id="CodeObject" name="CodeObject" class="form-control" placeholder="Nhập mã ..">
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label>Tên đối tượng<span style="color:red;">(*)</span>:</label>
                                        <input type="text" id="NameObject" name="NameObject" class="form-control" placeholder="Nhập tên ..">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <input type="text" id="txtAddress" name="txtAddress" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Điện thoại</label>
                                        <input type="text" id="txtPhone" name="txtPhone" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" id="txtEmail" name="txtEmail" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Mã số thuế</label>
                                        <input type="text" id="txtTaxCode" name="txtTaxCode" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Người giao dịch</label>
                                        <input type="text" id="txtNguoiGiaoDich" name="txtNguoiGiaoDich" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Số tài khoản</label>
                                        <input type="text" id="txtBankAccount" name="txtBankAccount" class="form-control">
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                }

            </div>
            <div class="card-footer">
                <button type="button" id="btn_saveObject" name="btn_saveObject" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                <button type="submit" data-dismiss="modal" class="btn btn-default float-right">Đóng</button>
            </div>
        </div>
    </div>
</div>




