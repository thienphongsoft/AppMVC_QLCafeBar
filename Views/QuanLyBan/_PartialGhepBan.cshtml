<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Chọn bàn ghép</h3>
                    <div class="card-tools">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true)
                            <div class="row">

                                @foreach (var itemGhep in ViewBag.GhepBan)
                                {

                                    <div class="col-lg-4 col-4">
                                        <div class="card">
                                            <div class="card-body">
                                                <a href="javascript:void(0);" id="LinkSaveGhepBan" name="LinkGhepGhepBan" data-id="@itemGhep.PhNhapXuat_ID" class="btn btn-warning btn-block btn-sm">
                                                    <h6 class="text-center" style="color:black;"><i class="fas fa-edit"></i> @itemGhep.TenBan</h6>
                                                </a>

                                            </div>
                                        </div>
                                    </div>

                                }
                            </div>


                        </div>
                    </div>
                }

            </div>
            <div class="card-footer">

                <button type="submit" data-dismiss="modal" class="btn btn-warning float-right"><i class="fas fa-backward"></i> Hủy bỏ</button>
            </div>
        </div>
    </div>
</div>



