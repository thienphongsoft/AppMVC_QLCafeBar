<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Tạo đối tượng</h3>
                    <div class="card-tools">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true)
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Chọn nhóm đối tượng</label>
                                        <div class="input-group">
                                            <select id="slNhomDoiTuong_add" name="slNhomDoiTuong_add" class="form-control">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Mã đối tượng</label>
                                        <input type="text" id="txtMaDT_add" name="txtMaDT_add" class="form-control" placeholder="Nhập mã ..">
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label>Tên đối tượng</label>
                                        <input type="text" id="txtTenDT_add" name="txtTenDT_add" class="form-control" placeholder="Nhập tên ..">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <input type="text" id="txtDiaChi_add" name="txtDiaChi_add" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Điện thoại</label>
                                        <input type="text" id="txtDienThoai_add" name="txtDienThoai_add" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Số tài khoản</label>
                                        <input type="text" id="txtSoTK_add" name="txtSoTK_add" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" id="txtEmail_add" name="txtEmail_add" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Người giao dịch</label>
                                        <input type="text" id="txtNguoiGiaoDich_add" name="txtNguoiGiaoDich_add" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Mã số thuế</label>
                                        <input type="text" id="txtMaST_add" name="txtMaST_add" class="form-control">
                                    </div>
                                </div>


                            </div>

                        </div>
                    </div>
                }

            </div>
            <div class="card-footer">
                <button type="button" id="btn_saveObject" name="btn_saveObject" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                <button type="submit" data-dismiss="modal" class="btn btn-default float-right">Đóng</button>
            </div>
        </div>
    </div>
</div>


