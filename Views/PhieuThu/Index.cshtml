                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CheckQuyenInPhieu", "PhieuThu")',
                    beforeSend: function () {
                        $('.overlay').show();
                    },
                    success: function (data) {
                        if (data == true) {

                            $.ajax({
