                                error: function (data) {
                                    console.log('Error:', data);
                                }

                            });
                        }
                        else {
                            toastr.error('Bạn không thể in phiếu, chưa phân quyền in phiếu!', 'Không thành công Alert', { timeOut: 5000 });
