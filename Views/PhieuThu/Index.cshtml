                             {
                                $.ajax({
                                    type: "POST",
                                    url: '@Url.Action("Delete", "PhieuThu")/' + delete_id,
                                    success: function (data) {
                                        $('#TablePayment').DataTable().ajax.reload();
                                        toastr.success('Bạn đã xóa đối tượng này thành công !', 'Thành công Alert', { timeOut: 5000 });
